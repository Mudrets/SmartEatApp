<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GreenButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/main_green</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">100dp</item>
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="transparentButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#0284FE</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="logoImage">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/img1</item>
    </style>

    <style name="field">
        <item name="android:background">@drawable/authorization_edit_text_border</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="errorMsg">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="AppTheme.Clinic" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cornerRadius">40dp</item>
    </style>

    <style name="menuBtn" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/main_green</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">#fff</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">2dp</item>
    </style>

    <style name="messageText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Theme.SmartEat.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <style name="topDesignation" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#979797</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="subHeaderProperties" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="valueOfProperty" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bottom_sheet_background</item>
    </style>

    <style name="BottomSheetDialogTransparentBack" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>