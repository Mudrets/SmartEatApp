<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.fragments.PlanFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/activity_main__guidelineLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="22dp"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/activity_main__guidelineRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_end="22dp"
                />

            <TextView
                android:id="@+id/activity_main__header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_main__guidelineLeft"
                app:layout_constraintEnd_toStartOf="@id/activity_main__guidelineRight"
                android:textAlignment="center"
                android:fontFamily="@font/rubik_medium"
                android:textColor="#232323"
                android:textSize="26sp"
                android:textAllCaps="false"
                android:text="План питания"
                android:layout_marginTop="19dp"/>

            <LinearLayout
                android:id="@+id/activity_main__warning_message_block"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_main__header"
                app:layout_constraintStart_toEndOf="@id/activity_main__guidelineLeft"
                app:layout_constraintEnd_toStartOf="@id/activity_main__guidelineRight"
                android:background="@drawable/warning_message_background"
                android:paddingVertical="16dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="11dp">

                <ImageView
                    android:id="@+id/activity_main__warning_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_warning"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/activity_main__warning_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/messageText"
                    android:text="Для получения плана питания вам необходимо заполнить анкету, чтобы мы получили необходимую информацию для составления плана"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/activity_main__add_form_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/activity_main__warning_message_block"
                app:layout_constraintStart_toEndOf="@id/activity_main__guidelineLeft"
                app:layout_constraintEnd_toStartOf="@id/activity_main__guidelineRight"
                style="@style/GreenButton"
                android:text="Заполнить анкету"
                android:layout_marginTop="15dp"
                />

            <ExpandableListView
                android:id="@+id/fragment_plan__plans"
                android:layout_width="0dp"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@id/activity_main__add_form_button"
                app:layout_constraintStart_toEndOf="@id/activity_main__guidelineLeft"
                app:layout_constraintEnd_toStartOf="@id/activity_main__guidelineRight"
                android:divider="@null"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</ScrollView>