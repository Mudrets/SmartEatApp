<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/achievement_row__achievement_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_apple_foreground"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/achievement_row__achievement_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/achievement_row__achievement_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Achievement name"
        android:textColor="@color/black_text"
        android:textSize="19sp"
        android:fontFamily="@font/rubik_medium"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/achievement_row__achievement_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/achievement_row__achievement_name"
        app:layout_constraintStart_toEndOf="@id/achievement_row__achievement_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        android:textColor="@color/black_text"
        android:textSize="15sp"
        android:fontFamily="@font/rubik_regular"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>